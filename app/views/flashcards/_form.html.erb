<%= form_with model: flashcard, url: (flashcard.new_record? ? deck_flashcards_path(deck, flashcard) : flashcard_path(flashcard)) do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :body, style: "display: block" %>
        <%= form.rich_text_area :body %>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>

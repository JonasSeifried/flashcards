<%= form_with model: [deck, flashcard] do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :body, style: "display: block" %>
        <%= form.rich_text_area :body %>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>

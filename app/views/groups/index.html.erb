



<div class="flex justify-center flex-col w-2/3 mt-2  ">
  <div class="w-full flex justify-between items-center">
    <div class="">
        <div class="">
          <p class="text-2xl">Groups</p>
          <p class="">All Groups you have access to!</p>
        </div>
    </div>
    <div class="">
      <%= link_to "Create Group", new_group_path, class: "link" %>
    </div>
  </div>
  <div id="groups" >
    <% @groups.each do |group| %>
        <div class="w-full flex justify-between items-center">
          <div class="">
              <%= link_to group.name, group, class: "link" %>
          </div>
          <div class="">
            <%= link_to "delete", group, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "link" %>
          </div>
        </div>
    <% end %>
</div>
